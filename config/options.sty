% Options
\setlength\parindent{0pt}
% \renewcommand{\arraystretch}{2} % Table vertical spacing

\newcommand{\col}[2]{{\color{#1} {#2}}} % Easier to use with xcolor package

\setlength{\columnsep}{0.5cm}
\setlength{\columnseprule}{0.5pt}

\newcommand*{\rom}[1]{\expandafter\@slowromancap\romannumeral #1@} % Roman numerals

% Element-wise multiplication
\newcommand{\elementwise}{%
  \mathbin{\mathpalette\elementwise@{}}%
}
\newcommand{\elementwise@}[2]{%
  \vcenter{\hbox{\tikz{
        \node[draw,circle,inner sep=0.5pt] {\(\m@th#1\bm{\cdot}\)};
      }}}%
}

% Dot product or concatenation
\newcommand{\concat}{%
  \mathbin{\mathpalette\concat@{}}%
}
\newcommand{\concat@}[2]{%
  \vcenter{\hbox{\tikz{
        \node[draw,circle,inner sep=0.5pt] {\(\m@th#1\)};
      }}}%
}

\setlist[itemize]{leftmargin=*} % No indent before itemize

% Color definitions for easier use
\newcommand{\red}[1]{{\color{red} #1}}
\newcommand{\green}[1]{{\color{ForestGreen} #1}}
\newcommand{\blue}[1]{{\color{blue} #1}}